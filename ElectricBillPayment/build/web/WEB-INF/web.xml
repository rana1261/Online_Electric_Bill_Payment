<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.ElectricBillController.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillPayServlet</servlet-name>
        <servlet-class>com.ElectricBillController.BillPayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.ElectricBillController.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.ElectricBillController.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveTableServlet</servlet-name>
        <servlet-class>com.ElectricBillController.SaveTableServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BillReceipLoginServlet</servlet-name>
        <servlet-class>com.ElectricBillController.BillReceipLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillPayServlet</servlet-name>
        <url-pattern>/Bill</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/AdminLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/DeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveTableServlet</servlet-name>
        <url-pattern>/SaveTableServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BillReceipLoginServlet</servlet-name>
        <url-pattern>/BillReceipLoginServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
